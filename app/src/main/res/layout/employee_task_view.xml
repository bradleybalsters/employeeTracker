<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/employeeTaskViewLayout"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/employeeTaskTextView"
        android:layout_centerHorizontal="true"
        android:text="@string/tasks"
        android:textSize="30sp"
        android:textColor="black"
        android:layout_marginTop="25dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/employeeTaskTextView"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:id="@+id/taskViewRadioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defaultTaskName"
            android:textSize="20sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/defaultTaskName"
            android:textSize="20sp"/>

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/taskView2EditButton"
        android:text="@string/edit"
        android:textSize="20sp"
        android:layout_below="@+id/taskViewRadioGroup"
        android:layout_marginTop="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskView2ClearButton"
        android:text="@string/clear"
        android:textSize="20sp"
        android:layout_below="@+id/taskViewRadioGroup"
        android:layout_marginTop="150dp"
        android:layout_marginStart="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskView2BackButton"
        android:text="@string/back"
        android:textSize="20sp"
        android:layout_below="@+id/taskViewRadioGroup"
        android:layout_marginStart="260dp"
        android:layout_marginTop="150dp" />

</RelativeLayout>